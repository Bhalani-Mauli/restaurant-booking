<div class="mt-5">
  <h2>Restaurant details</h2>
  <div
    {{! class="d-flex flex-column justify-content-center mt-5"
    style="max-width: 80%; margin:auto" }}
  >
    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="/{{image}}" class="img-fluid rounded-start" alt="..." />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h2 class="card-title">{{name}}</h2>
            <h5 class="card-text"><div
                class="text-body-secondary"
              >{{typeOfCuisine}}</div></h5>
            <h5 class="card-text"><div
                class="text-body-secondary"
              >{{rating}}</div></h5>
            <h5 class="card-text"><small class="text-body-secondary">{{street}},
                {{pincode}},
                {{city}}</small></h5>
            <a href="/restaurants/booking/{{id}}">
              <button type="submit" class="btn btn-primary">Book a Table</button>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>