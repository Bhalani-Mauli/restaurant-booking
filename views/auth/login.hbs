<div class="mt-5">
  <h2>Login Form</h2>

  <form action="/auth/login" method="post">
    <div class="mb-3">
      <label for="emailInput" class="form-label">Email</label>
      <input
        type="email"
        class="form-control"
        name="email"
        id="emailInput"
        required
      />
    </div>

    <div class="mb-3">
      <label for="emailInput" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        name="password"
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}"
        id="passwordInput"
        required
      />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
  </form>
  {{#if errorMessage}}
    <span class="text-danger">{{errorMessage}}</span>
  {{/if}}
</div>