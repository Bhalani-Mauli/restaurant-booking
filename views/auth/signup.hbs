<div class="mt-5">
  <h2>SIGNUP FORM</h2>

  <form action="/auth/signup" method="post">
    <div class="mb-3">
      <label for="nameInput" class="form-label">Username</label>
      <input
        type="name"
        class="form-control"
        id="nameInput"
        name="username"
        aria-describedby="emailHelp"
        required
      />
    </div>

    <div class="mb-3">
      <label for="emailInput" class="form-label">Email</label>
      <input
        type="email"
        class="form-control"
        name="email"
        id="emailInput"
        required
      />
    </div>

    <div class="mb-3">
      <label for="passwordInput" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        name="password"
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}"
        id="passwordInput"
        required
      />
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
  </form>
  {{#if errorMessage}}
    <span class="text-danger">{{errorMessage}}</span>
  {{/if}}
</div>